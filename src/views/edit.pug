extends layout.pug

block content
  div.container
    h1.pageTitle #{pageTitle}
    form#editvideo-form(method='POST')
      input(name='title', placeholder='Title', type='text', required, maxlength=80, value=video.title)
      input(name='description', placeholder='Description', type='text', required, minlength=20, value=video.description)
      input(name='hashtags', placeholder='Hashtags', type='text', required, value=video.hashtags.join())
      input(value='비디오 수정', type='submit')