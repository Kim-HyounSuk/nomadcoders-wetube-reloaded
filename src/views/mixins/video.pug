mixin video(data)
  div
    h4
      a(href=`/videos/${data.id}`)=data.title
    span=data.thumbUrl
    div(style=`background-image:url(/${data.thumbUrl});width:100px;height:80px;background-size:cover;background-position:center;`)
    p=data.description
    ul
      each hashtag in data.hashtags
        li=hashtag
    small=data.createdAt
    small=data.meta.views
    hr